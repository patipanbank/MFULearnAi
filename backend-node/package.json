{
  "name": "backend-node",
  "version": "0.1.0",
  "description": "Node 20 rewrite of MFULearnAI backend (NestJS)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "env:create": "cp .env.example .env",
    "env:validate": "node -e \"require('dotenv').config(); console.log('Environment variables loaded successfully')\"",
    "health:check": "curl -f http://localhost:5000/health || echo 'Health check failed'",
    "docs:open": "open http://localhost:5000/docs",
    "migrate:from-fastapi": "./migrate-to-nestjs.sh"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.842.0",
    "@aws-sdk/client-s3": "latest",
    "@nestjs/bullmq": "latest",
    "@nestjs/common": "latest",
    "@nestjs/config": "latest",
    "@nestjs/core": "latest",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "latest",
    "@nestjs/mongoose": "latest",
    "@nestjs/passport": "latest",
    "@nestjs/platform-express": "latest",
    "@nestjs/swagger": "latest",
    "@nestjs/websockets": "latest",
    "@types/express": "^5.0.3",
    "@types/passport-jwt": "^4.0.1",
    "axios": "^1.10.0",
    "bcryptjs": "latest",
    "bullmq": "latest",
    "chromadb": "^3.0.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "ioredis": "latest",
    "mongoose": "latest",
    "multer": "^2.0.1",
    "passport": "latest",
    "passport-jwt": "^4.0.1",
    "passport-saml": "latest",
    "pdf-parse": "^1.1.1",
    "reflect-metadata": "latest",
    "rxjs": "latest",
    "socket.io": "latest",
    "swagger-ui-express": "latest",
    "uuid": "^11.1.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/multer": "^2.0.0",
    "@types/node": "latest",
    "@types/pdf-parse": "^1.1.5",
    "@types/uuid": "^10.0.0",
    "rimraf": "latest",
    "ts-node-dev": "latest",
    "typescript": "latest"
  }
}
